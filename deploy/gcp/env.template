# Bitget API Credentials
BITGET_API_KEY=your_api_key_here
BITGET_API_SECRET=your_api_secret_here
BITGET_PASSPHRASE=your_passphrase_here
BITGET_SUBACCOUNT_UID=

# Dashboard Configuration (optional)
TAOQUANT_DASHBOARD_TOKEN=your_secure_token_here
TAOQUANT_ENABLE_CONTROL=0
TAOQUANT_BASE_DIR=/opt/taoquant
TAOQUANT_STATE_DIR=/opt/taoquant/state
TAOQUANT_LOG_DIR=/opt/taoquant/logs/bitget_live

# Trading Configuration (optional overrides)
TAOQUANT_MODE=live

# Persistence (PostgreSQL on same VM)
# Recommended: bind Postgres to 127.0.0.1 only, and use a DSN:
# TAOQUANT_DB_DSN=postgresql://taoquant:YOUR_PASSWORD@127.0.0.1:5432/taoquant
TAOQUANT_DB_DSN=
# Alternatively (used if DSN is empty):
TAOQUANT_DB_HOST=127.0.0.1
TAOQUANT_DB_PORT=5432
TAOQUANT_DB_NAME=taoquant
TAOQUANT_DB_USER=taoquant
TAOQUANT_DB_PASSWORD=

# Dashboard selects which bot to read from DB:
# default format: <SYMBOL>_<market_type>  e.g. BTCUSDT_swap
TAOQUANT_BOT_ID=BTCUSDT_swap

# Infra kill switch (set to 1 to cancel bot orders & stop placing new ones)
TAOQUANT_KILL_SWITCH=0
